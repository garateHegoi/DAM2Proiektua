@model ChessGame.Models.game

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>

<h1>Create</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p>Num</p>
                <input asp-for="num" class="form-control" />
                <span asp-validation-for="num" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Time</p>
                <input asp-for="time" class="form-control" />
                <span asp-validation-for="time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Player1</p>
                <input asp-for="player1" class="form-control" />
                <span asp-validation-for="player1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Player2</p>
                <input asp-for="player2" class="form-control" />
                <span asp-validation-for="player2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Winner</p>
                <input asp-for="winner" class="form-control" />
                <span asp-validation-for="winner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>